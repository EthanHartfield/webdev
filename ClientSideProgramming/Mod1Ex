        <section>
          <header><h3>Current Date and Time</h3></header>
          <script>
            //create a variable
            let currentDt = new Date();

            //variables to hold the string representation of the current date
            localTime = currentDt.toString();
            uniTime = currentDt.toGMTString();

            //display or write the time on the page
            document.write("<p><strong>Local time:</strong> " + localTime + "</p>");
            document.write("<p><strong>Universal time:</strong> " + uniTime + "</p>");

            hours = currentDt.getHours(); //get the hours from the current time
            minutes = currentDt.getMinutes(); //get the minutes from the current time
            seconds = currentDt.getSeconds(); //get the seconds from the current time
            mill = currentDt.getMilliseconds();
            document.write("<p><strong>" + hours + ":" + minutes + ":" + seconds + ":" + mill + "</strong><p>");

          </script>

        </section>


